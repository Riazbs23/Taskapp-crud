@{
    ViewData["Title"] = "Welcome To TaskApp";
}
<!-- Feature Section -->
<section class="feature-section py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row g-4 justify-content-center">
            <!-- Feature 1 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100"
                     style="background: white; border-radius: 15px; box-shadow: 0 5px 20px rgba(108, 99, 255, 0.1);">
                    <div class="icon-container mb-4"
                         style="width: 80px; height: 80px; background: linear-gradient(135deg, #6c63ff, #a29bfe);
                                margin: 0 auto; border-radius: 20px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-check2-all" style="font-size: 2rem; color: white;"></i>
                    </div>
                    <h3 style="color: #4d44db;">Easy Task Management</h3>
                    <p class="text-muted">Create, edit, and organize tasks with our simple drag-and-drop interface.</p>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100"
                     style="background: white; border-radius: 15px; box-shadow: 0 5px 20px rgba(255, 101, 132, 0.1);">
                    <div class="icon-container mb-4"
                         style="width: 80px; height: 80px; background: linear-gradient(135deg, #ff6584, #ff8a9d);
                                margin: 0 auto; border-radius: 20px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-bell" style="font-size: 2rem; color: white;"></i>
                    </div>
                    <h3 style="color: #4d44db;">Smart Reminders</h3>
                    <p class="text-muted">Never miss deadlines with customizable notifications and alerts.</p>
                </div>
            </div>

            <!-- Feature 3 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100"
                     style="background: white; border-radius: 15px; box-shadow: 0 5px 20px rgba(76, 201, 240, 0.1);">
                    <div class="icon-container mb-4"
                         style="width: 80px; height: 80px; background: linear-gradient(135deg, #4cc9f0, #90e0ef);
                                margin: 0 auto; border-radius: 20px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-graph-up" style="font-size: 2rem; color: white;"></i>
                    </div>
                    <h3 style="color: #4d44db;">Progress Insights</h3>
                    <p class="text-muted">Track your productivity with visual charts and completion statistics.</p>
                </div>
            </div>
        </div>
    </div>
</section>


        <!--Banner Card -->
<div class="cta-section py-5" style="background: linear-gradient(135deg, #ff9a9e, #fad0c4); border-radius: 20px;">
    <div class="container text-center py-4">
            <h2 class="mb-4">Ready to get organized?</h2>
            <a href="/Tasks/Create" class="btn btn-primary btn-lg px-5" style="background: #ff6584; border: none; border-radius: 50px;">
                Start Now - It's Free
        </a>
        </div>
    </div>
</div>